---
import "../assets/css/custom_boostrap.css";
import "../../node_modules/bootstrap-icons/font/bootstrap-icons.css";
import Logo from "../components/Logo.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="vocabversus-body">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
		<Logo />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--vv-white: #c9c9c9;
		--vv-primary: #242424;
		--vv-primary-accent: #444444;
	}
	.vocabversus-body {
		font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
		line-height: 1.5;
		font-weight: 400;

		color-scheme: light dark;
		color: var(--vv-white);
		background-color: var(--vv-primary);

		font-synthesis: none;
		text-rendering: optimizeLegibility;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		-webkit-text-size-adjust: 100%;
	}

	/* Set theme coloring for input fields */
	/* Specific focus border */
	.form-control:focus,
	.form-select:focus,
	.form-check-input:focus,
	.btn-close:focus {
		box-shadow: 0 0 0 0.15rem #ffffff81;
		border-color: var(--vv-primary-accent);
	}

	/* General color changes */
	.input-group-text,
	/* input field */
	.form-control,
	/* dropdown */
	.form-select,
	.form-select:focus,
	.form-select:disabled
	/* checkbox */
	.form-check-input,
	.form-check-input:checked {
		background-color: #00000000;
		color: var(--vv-white);
		border-color: var(--vv-primary-accent);
	}

	.input-group-text {
		background-color: #ffffff13;
	}

	/* High contrast dropdown menu when selected */
	.form-select:focus {
		background-color: white;
		color: black;
	}

	.form-select:disabled {
		background-color: #00000000;
	}
</style>
